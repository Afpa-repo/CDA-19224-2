{% form_theme form 'bootstrap_4_layout.html.twig' %}

{{ form_start(form) }}
<div class="row">
    <div class="col md-4">{{ form_row(form.title) }}</div>
    <div class="col md-4">{{ form_row(form.category) }}</div>
    <div class="col md-4">{{ form_row(form.price) }}</div>
</div>
<div class="row">
    <div class="col md-2">{{ form_row(form.description) }}</div>
</div>
{{ form_rest(form) }}
<button class="btn btn-primary">{{ button|default('Enregistrer') }}</button>
{{ form_end(form) }}
